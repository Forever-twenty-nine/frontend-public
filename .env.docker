# Environment variables for Docker Compose
# Configuraci√≥n para mantener consistencia con setup de Kubernetes

# Backend Configuration
B_CURSALA_IMAGE=ghcr.io/cursala/b-cursala:latest
B_CURSALA_PORT=8080

# Frontend Configuration
F_CURSALA_IMAGE=ghcr.io/cursala/f-cursala:latest
F_CURSALA_PORT=80

# Resource Limits (equivalente a las configuraciones de K8s)
B_CURSALA_MEMORY_LIMIT=256M
B_CURSALA_CPU_LIMIT=0.5
B_CURSALA_MEMORY_RESERVATION=256M
B_CURSALA_CPU_RESERVATION=0.25

F_CURSALA_MEMORY_LIMIT=1G
F_CURSALA_CPU_LIMIT=0.5
F_CURSALA_MEMORY_RESERVATION=1G
F_CURSALA_CPU_RESERVATION=0.5

# Volume Configuration
STATIC_FILES_VOLUME_PATH=/var/lib/docker/volumes/cursala_static_files/_data

# Network Configuration
NETWORK_NAME=cursala-network